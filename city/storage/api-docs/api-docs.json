                "tags": [
                    "Cities"
                ],
                "summary": "Create new city",
                "description": "Returns city data",
                "operationId": "storeCity",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "country",
                                    "population",
                                    "founded_at"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Tokyo"
                                    },
                                    "country": {
                                        "type": "string",
                                        "example": "Japan"
                                    },
                                    "population": {
                                        "type": "integer",
                                        "example": 14000000
                                    },
                                    "founded_at": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "1457-01-01"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
